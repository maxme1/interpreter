program = statement*

# TODO: add empty statements consisting just of a semicolon
statement = (expression DELIMITER) | block | ifStmt | whileStmt

# TODO: possibly optional first statement
ifStmt = 'if' '(' expression ')' (statement ('else' statement)? )?

whileStmt = 'while' '(' expression ')' statement

block = '{' statement* '}'

-- expression --

expression = term | varSet

varSet = IDENTIFIER '=' expression

term = factor ( ('+' | '-') factor )*

factor = unary ( ('*' | '/') unary )*

# TODO: maybe add unlimited unary operations
unary = ('+' | '-')? literal

literal = NUMBER | '(' expression ')' | IDENTIFIER | BOOL

NUMBER = '\d+'
IDENTIFIER = '[^a-zA-Z0-9_]\w*
BOOL = 'True' | 'False'
DELIMITER = ';'